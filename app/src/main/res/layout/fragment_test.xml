<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    tools:context=".TestFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled Tests"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/testRecycle_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:nestedScrollingEnabled="false"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/test_layoutStudent"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="180dp">
            <TextView
                android:id="@+id/noTest_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="No Tests Scheduled"
                android:textColor="@color/black"
                android:textSize="17sp"
                />

            <ProgressBar
                android:id="@+id/progressBarTestStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:scrollbarSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Interviews' Offers"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/interviewRecycle"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interviewLayout_recruiter"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/noInterview_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="No Interview Offers"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


            <ProgressBar
                android:id="@+id/progressBaroffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Scheduled Interviews"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/schduleInterview_recycle"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/schduleInterview_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/noInterviewschedule_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="No Interviews Scheduled"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


            <ProgressBar
                android:id="@+id/progressBarschedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Feedbacks"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/feedback_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="20dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feedbackLayout_student"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/noFeedback_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="No feedback"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


            <ProgressBar
                android:id="@+id/progressBarfeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>