<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_ground"
    android:layout_height="match_parent"
    tools:context=".Profile_Management">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/profile_dp_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/profile_layout_background"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            tools:layout_editor_absoluteX="30dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:text="NAME : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/input_text_bg"
                android:hint="XYZ"
                android:inputType="text"
                android:paddingVertical="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/profile_layout_background"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
          >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:textStyle="bold"
                android:text="Email : "
                android:textColor="@color/black"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XYZ123@gmail.com"
                android:background="@drawable/input_text_bg"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="3dp"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/profile_layout_background"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="30dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:text="DoB : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dobEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/input_text_bg"
                android:inputType="date"
                android:hint="01/01/2002"
                android:paddingVertical="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/profile_layout_background"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="-173dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:text="Ph# : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/input_text_bg"
                android:hint="+923123456789"
                android:paddingVertical="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Reset Password"
            android:textSize="18sp"
            android:stateListAnimator="@null"
            android:textColor="#FCFAFA"
            android:padding="10dp"
            android:layout_marginHorizontal="90dp"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Save_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Save Changes"
            android:textSize="18sp"
            android:stateListAnimator="@null"
            android:textColor="#FCFAFA"
            android:padding="10dp"
            android:layout_marginHorizontal="90dp"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@+id/Reset_password"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>